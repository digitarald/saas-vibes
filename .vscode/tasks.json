				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "🧪 Test UI",
			"type": "shell",
			"command": "pnpm",
			"args": ["test:ui"],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false,
				"group": "test"
			}
		},
		{
			"label": "🎭 E2E Tests",
			"type": "shell",
			"command": "pnpm",
			"args": ["test:e2e"],
			"group": "test",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "🎭 E2E Tests (UI)",
			"type": "shell",
			"command": "pnpm",
			"args": ["test:e2e:ui"],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false,
				"group": "test"
			}
		},
		{
			"label": "🔬 Full Test Suite",
			"dependsOn": [
				"🔍 Type Check",
				"✨ Lint",
				"🧪 Run Tests",
				"🎭 E2E Tests"
			],
			"group": {
