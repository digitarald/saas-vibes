{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "ğŸš€ Dev Server (Turbopack)",
			"type": "shell",
			"command": "pnpm",
			"args": ["run", "dev"],
			"group": "build",
			"isBackground": true,
			"problemMatcher": {
				"owner": "typescript",
				"source": "ts",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
					"file": 1,
					"location": 2,
					"severity": 3,
					"code": 4,
					"message": 5
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*Local:.*",
					"endsPattern": ".*Ready in.*"
				}
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false,
				"group": "dev"
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "ğŸ” Type Check",
