{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "ğŸš€ Debug Next.js App",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/next",
			"args": ["dev", "--turbopack"],
			"cwd": "${workspaceFolder}",
			"runtimeArgs": ["--inspect"],
			"env": {
				"NODE_ENV": "development"
			},
			"console": "integratedTerminal",
			"restart": true,
			"serverReadyAction": {
				"pattern": "- Local:.+(https?://.+)",
				"uriFormat": "%s",
				"action": "debugWithChrome"
			}
		},
		{
			"name": "ğŸ” Debug Current TypeScript File",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/tsx",
			"args": ["${file}"],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"env": {
				"NODE_ENV": "development"
			}
		},
		{
			"name": "ğŸŒ± Debug Database Seed",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/tsx",
			"args": ["prisma/seed.ts"],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"env": {
				"NODE_ENV": "development"
			}
		},
		{
			"name": "ğŸ§ª Debug Next.js Build",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/next",
			"args": ["build"],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"env": {
				"NODE_ENV": "production"
			}
		},
		{
			"name": "ğŸ­ Debug Production Server",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/next",
			"args": ["start"],
			"cwd": "${workspaceFolder}",
			"runtimeArgs": ["--inspect"],
			"env": {
				"NODE_ENV": "production"
			},
			"console": "integratedTerminal",
			"restart": true
		},
		{
			"name": "ğŸ”§ Attach to Next.js",
			"type": "node",
			"request": "attach",
			"port": 9229,
			"restart": true,
			"localRoot": "${workspaceFolder}",
			"remoteRoot": "${workspaceFolder}"
		}
	],
	"compounds": [
		{
			"name": "ğŸš€ Full Stack Debug",
			"configurations": [
				"ğŸš€ Debug Next.js App"
			],
			"preLaunchTask": "ğŸ—„ï¸ Database: Start Services",
			"stopAll": true
		}
	]
}
